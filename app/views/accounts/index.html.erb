<div class="">
  <h1>Create new Account</h1>

  <div class="grid grid-cols-1 lg:grid-cols-2 gap-4 lg:gap-16 my-4 py-8" style="justify-items:center">
    <% @accounts.each do |account| %>
      <div class="flex flex-col justify-around bg-white w-60 h-44 items-center rounded rounded-xl">
        <img src="" alt="" class="w-25 h-25">  
        <h3> <%= account.name %> </h3>
        <p>Cleared value: <%= account.cleared_account %></p>
        <p>Balanced value: <%= account.balanced_account %></p>
      </div>
    <% end %>
  </div>

</div>

<!-- Trigger/Open The Modal -->
<button id="myBtn" class="w-12 h-12 rounded-full bg-green-500 text-white">+</button>

<!-- The Modal -->
<%# <div id="myModal" class="modal"> %>
<div id="myModal" class="hidden fixed z-10 left-0 top-1/3 w-full h-full overflow-auto">

  <!-- Modal content -->
  <%# <div class="modal-content w-4/5 bg-gray-200 border-red-500 p-20 mt-64 mx-auto"> %>
  <div class="flex flex-col w-4/5 bg-gray-200 border-red-500 p-10  mx-auto">
    
    <div class="w-full flex justify-between">
      <p>Some text in the Modal..</p>
      <span class="close">&times;</span>
    </div>
    
    <div>
    <%= form_with(model: @account, url: ledger_accounts_path, local: true) do |form| %>
      <%= form.label :name %>
      <%= form.text_field :name %>
      <%= form.submit %>
    <% end %>
    </div>
  </div>

</div>

<%= javascript_pack_tag 'modal' %>