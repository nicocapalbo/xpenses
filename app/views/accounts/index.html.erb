<div class="flex flex-col justify-between h-full">
  
  <div>
    <div class="w-full flex justify-between px-6">
      <h1 class="text-4xl">My Accounts</h1>
      <!-- Trigger/Open The Modal -->
      <button id="myBtn" class="">
        <i class='bx bxs-plus-circle bx-rotate-90 text-5xl' style='color:#7ee979'></i>
      </button>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-4 lg:gap-16 my-4 py-8" style="justify-items:center">
      <% @accounts.each do |account| %>
        <div class="w-80 h-48 creditCard rounded rounded-xl p-4 flex flex-col justify-between">
          <div class="flex justify-between">
            <p class="font-semibold text-lg"><%= account.name.upcase %></p> 
            <img src="" alt="" class="w-25 h-25">  
          </div>
          <div class="flex ml-2 items-center">
            <%= image_tag 'chip', class:'h-8' %>
            <i class='ml-1 bx bx-wifi-2 bx-rotate-90 text-3xl text-primary'></i>
          </div>
          <div class="w-full align-left">
            <div class="flex justify-between">
              <p>Cleared</p>
              <p><%= number_to_currency(account.cleared_account) %></p>
            </div>
            <div class="flex justify-between">
              <p>Balanced</p>
              <p class="align-left"><%= number_to_currency(account.balanced_account) %></p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <div>
    <div class="flex justify-end">
      <p class="text-lg">TOTAL CLEARED</p>
      <p class="text-lg"><%= number_to_currency(@ledger.ledger_cleared_deposit - @ledger.ledger_cleared_payment) %> </p>
    </div>
    <div class="flex justify-end">
      <p class="text-2xl">TOTAL BALANCE</p>
      <p class="text-2xl"><%= number_to_currency(@ledger.ledger_balanced_deposit - @ledger.ledger_balanced_payment) %> </p>
    </div>
  </div>

</div>

<!-- The Modal -->
<%# <div id="myModal" class="modal"> %>
<div id="myModal" class="hidden fixed z-10 left-0 top-1/3 w-full h-full overflow-auto">

  <!-- Modal content -->
  <%# <div class="modal-content w-4/5 bg-gray-200 border-red-500 p-20 mt-64 mx-auto"> %>
  <div class="flex flex-col w-4/5 bg-gray-200 border-red-500 p-10  mx-auto">
    
    <div class="w-full flex justify-between">
      <p>Some text in the Modal..</p>
      <span class="close">&times;</span>
    </div>
    
    <div>
      <%= form_with(model: @account, url: ledger_accounts_path, local: true) do |form| %>
        <%= form.label :name %>
        <%= form.text_field :name %>
        <%= form.submit %>
      <% end %>
    </div>
  </div>

</div>

<%= javascript_pack_tag 'modal' %>