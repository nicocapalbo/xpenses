<div class="px-8 py-8">
  <table id="table" class="w-full">
    <thead>
      <tr>
        <th class="">Account</th>
        <th class="">Date</th>
        <th class="">Payee</th>
        <th class="">Category</th>
        <th class="">Cleared</th>
        <th class="">Payment</th>
        <th class="">Deposit</th>
      </tr>
    </thead>
    <tbody>
      <% @transactions.each do |transaction| %>
        <tr>
          <td class=""><%= transaction.account.name %></td>
          <td class=""><%= transaction.date %></td>
          <td class=""><%= transaction.info %></td>
          <td class=""><%= transaction.subcategory.name %></td>
          <td class=""><%= transaction.cleared %></td>
          <td class=""><%= transaction.payment %></td>
          <td class=""><%= transaction.deposit %></td>
        </tr>
      <% end %>
    </tbody>
  </table>



</div>

<!-- Trigger/Open The Modal -->
<button id="myBtn" class="w-12 h-12 rounded-full bg-green-500 text-white">+</button>

<!-- The Modal -->
<%# <div id="myModal" class="modal"> %>
<div id="myModal" class="hidden fixed z-10 left-0 top-0 w-full h-full overflow-auto">

  <!-- Modal content -->
  <div class="modal-content w-4/5 bg-gray-200 border-red-500 p-20 mt-64">
    <span class="close">&times;</span>
    <p>Some text in the Modal..</p>
  </div>

</div>

<%= javascript_pack_tag 'modal' %>