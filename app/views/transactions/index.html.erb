<div class="grid grid-col-7 gap-4">

  <div class="col-start-1 col-span-4 cardBlack rounded-xl mr-8">
    <% @transactions.each do |transaction| %>
      <%= render partial: "transaction", locals: { transaction: transaction } %>
    <% end %>
  </div>

  <div class="col-start-5 col-span-3 cardBlack rounded-xl ">
  <h1>HELLO WOLRD</h1>
  </div>

</div>

<!-- Trigger/Open The Modal -->
<button id="myBtn" class="w-12 h-12 rounded-full bg-green-500 text-white">+</button>

<!-- The Modal -->
<%# <div id="myModal" class="modal"> %>
<div id="myModal" class="hidden fixed z-10 left-0 top-1/3 w-full h-full overflow-auto">

  <!-- Modal content -->
  <%# <div class="modal-content w-4/5 bg-gray-200 border-red-500 p-20 mt-64 mx-auto"> %>
  <div class="modalPopUp flex flex-col justify-around bg-gray-200 p-10 mx-auto rounded-xl">
    
    <div class="w-full flex justify-between">
      <p class="text-black">Some text in the Modal..</p>
      <span class="close">&times;</span>
    </div>
    
    <div>
    <%= form_with(model: @transaction, local: true) do |form| %>
      <div>
        <%= form.hidden_field :ledger_id, value: @ledger.id %>
      </div>
      <div>
        <%= form.label :account %>
        <%= form.collection_select :account_id, @ledger.accounts, :id, :name %>
      </div>
      <div>
        <%= form.date_field :date %>
      </div>
      <div>
        <%= form.text_field :info, placeholder: 'Info about the transaction...' %>
      </div>
      <div>
        <%= form.collection_select :subcategory_id, @ledger.subcategories, :id, :name %>
      </div>
      <div>
        <%= form.label :cleared %>
        <%= form.check_box :cleared %>
      </div>
      <div>
        <%= form.label :payment %>
        <%= form.number_field :payment %>
      </div>
      <div>
        <%= form.label :deposit %>
        <%= form.number_field :deposit %>
      </div>
      <div>
        <%= form.submit %>
      </div>
    <% end %>
    </div>
  </div>

</div>

<%= javascript_pack_tag 'modal' %>