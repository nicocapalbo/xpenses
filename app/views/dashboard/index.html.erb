<div class="grid grid-cols-1 lg:grid-cols-3 lg:grid-rows-2 gap-4 lg:gap-8" style="justify-items:center">
  
  <div class="lg:col-start-1 lg:col-span-1 w-full h-full flip-card-container">
    <div class="flip-card">
      <div class="flip-card-inner">
        
        <div class="flip-card-front cardBlack p-4 rounded rounded-xl">
          <div class="flex justify-between">
            <div>
              <span class="mb-3">Your total balance</span>
              <p class="text-2xl font-semibold <%= (@ledger.ledger_balanced_deposit - @ledger.ledger_balanced_payment).positive? ? 'text-positive' : 'text-negative' %>"><%= number_to_currency(@ledger.ledger_balanced_deposit - @ledger.ledger_balanced_payment) %> </p>
            </div>
            <span>See cleared</span>
          </div>
          
          <div class="mt-3 flex justify-between">
            <div class="flex justify-between">
              <div></div>
              <div>
                <p class="text-xs">Month income</p>
                <p class="text-positive font-semibold text-left"><%= number_to_currency(@ledger.ledger_balanced_month_deposit) %></p>
              </div>
            </div>
            <div class="flex justify-between">
            <div></div>
            <div>
              <p class="text-xs">Month Expense</p>
              <p class="text-negative font-semibold text-left"><%= number_to_currency(@ledger.ledger_balanced_month_payment) %></p>
            </div>
            </div>
          </div>
        </div>

        <div class="flip-card-back cardBlack p-4 rounded rounded-xl">
          
          <div class="flex justify-between">
            <div>
              <span class="mb-3">Your total cleared</span>
              <p class="text-2xl font-semibold <%= (@ledger.ledger_cleared_deposit - @ledger.ledger_cleared_payment).positive? ? 'text-positive' : 'text-negative' %>"><%= number_to_currency(@ledger.ledger_cleared_deposit - @ledger.ledger_cleared_payment) %> </p>
            </div>
            <span>Back to balance</span>
          </div>
       
       
          <div class="mt-3 flex justify-between">
            <div class="flex justify-between">
              <div></div>
              <div>
                <p class="text-xs">M.I cleared</p>
                <p class="text-positive font-semibold text-left"><%= number_to_currency(@ledger.ledger_cleared_month_deposit) %></p>
              </div>
            </div>
            <div class="flex justify-between">
              <div></div>
              <div>
                <p class="text-xs">M.E cleared</p>
                <p class="text-negative font-semibold text-left"><%= number_to_currency(@ledger.ledger_cleared_month_payment) %></p>
              </div>
            </div>
          </div>
        </div>

      </div>
    </div>
  </div>

  <div class="lg:col-start-1 lg:col-span-1 w-full h-full flip-card-container">
    <div class="flip-card">
      <div class="flip-card-inner">
        
        <div class="flip-card-front cardBlack p-4 rounded rounded-xl">
          <div class="flex justify-between">
            <span class="mb-3">All Cleared</span>
            <span>See balanced</span>
          </div>
          <% @accounts.each do |account| %>    
            <div class="flex justify-between">
              <div class="flex items-center">
                <i class='bx bxs-bank mr-3' style='color:#ffffff' ></i>
                <h4> <%= account.name %> </h4>
              </div>
              <p><%= number_to_currency(account.cleared_account) %></p>
            </div>
          <% end %>
          <div class="mt-3 flex justify-between">
            <h4>Cleared total: </h4>
            <p class="text-positive font-semibold text-left"><%= number_to_currency(@ledger.ledger_cleared_deposit - @ledger.ledger_cleared_payment) %> </p>
          </div>
        </div>

        <div class="flip-card-back cardBlack p-4 rounded rounded-xl">
          <div class="flex justify-between">
            <span class="mb-3">All Balanced</span>
            <span>See cleared</span>
          </div>
          <% @accounts.each do |account| %>    
            <div class="flex justify-between">
              <div class="flex items-center">
                <i class='bx bxs-bank mr-3' style='color:#ffffff' ></i>
                <h4> <%= account.name %> </h4>
              </div>
              <p><%= number_to_currency(account.balanced_account) %></p>
            </div>
          <% end %>
          <div class="mt-3 flex justify-between">
            <h4>Balance total: </h4>
            <p class="text-positive font-semibold text-left"><%= number_to_currency(@ledger.ledger_balanced_deposit - @ledger.ledger_balanced_payment) %> </p>
          </div>
        </div>

      </div>
    </div>
  </div>

  
  <div class="lg:col-start-2 lg:col-span-2 lg:row-start-1 lg:row-span-2 cardBlack rounded rounded-xl w-full p-4">
    <div class="flex justify-between">
      <h4 class="mb-3">Expenses summary</h4>
      <p>+</p>
    </div>
    <% @categories.each do |category| %>    
      <div class="flex justify-between">
        <div>
          <img src="" alt="" class="w-25 h-25 bg-red-400">
          <h4> <%= category[:category_name] %> </h4>
        </div>
        <div class="flex lg:w-48 justify-between">
          <p><%= number_to_currency(category[:category_total]) %></p>
          <p><%= number_to_percentage((category[:category_total] / @month_total_expense) * 100, precision: 0) %></p>
        </div>
      </div>
    <% end %>
    <div class="mt-3 flex justify-between">
      <h4>Monthly expenditure: </h4>
      <p> <%= number_to_currency(@month_total_expense) %> </p>
    </div>
  </div>

  <div class="lg:col-start-1 lg:col-span-1 w-full h-full"> 
    <div class="bg-white p-4 rounded rounded-xl">
      <div class="flex justify-between">
        <h3 class="mb-3">Top expenditures</h3>
        <p>+</p>
      </div>
      <% @top_transactions.each do |top_transaction| %>    
        <div class="flex justify-between">
          <div>
            <img src="" alt="" class="w-25 h-25 bg-red-400">
            <h3> <%= top_transaction.info %> </h3>
            <div class="flex">
              <span><%= top_transaction.account.name %> </span>
              <span> - </span>
              <span><%= top_transaction.subcategory.name %> </span>
            </div>
          </div>
          <div>
            <p class="font-medium text-negative"><%= number_to_currency(top_transaction.payment) %></p>
            <span><%= top_transaction.date %> </span>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  
  <div class="lg:col-start-2 lg:col-span-2 cardBlack rounded rounded-xl w-full">
    <div id="canvas-holder" class="w-1/3 mx-auto p-4">
      <h3 class="text-center">% of month expenses</h3>
      <canvas id="myChart" data-labels="<%= @data_keys %>" data-data="<%= @data_values %>"></canvas>
    </div>
  </div>

</div>