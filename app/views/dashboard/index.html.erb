<div class="grid grid-cols-1 lg:grid-cols-3 lg:grid-rows-2 gap-4 lg:gap-8" style="justify-items:center">
  
  <div class="lg:col-start-1 lg:col-span-1 w-full flip-card-container">
    <div class="flip-card">
      <div class="flip-card-inner">
        
        <div class="flip-card-front p-4 rounded rounded-xl">
          <div class="flex justify-between">
            <h3 class="mb-3">Month report</h3>
            <p>+</p>
          </div>
          <div>
            <p> <%=  %> </p>
          </div>
          <div class="mt-3 flex justify-between">
            <h4>Balance: </h4>
            <p> <%= number_to_currency(@ledger.ledger_balanced_month_deposit - @ledger.ledger_balanced_month_payment) %> </p>
          </div>
          <div class="mt-3 flex justify-between">
            <div class="flex justify-between">
              <h4>Income: </h4>
              <p> <%= number_to_currency(@ledger.ledger_balanced_month_deposit) %> </p>
            </div>
            <div class="flex justify-between">
              <h4>Expense: </h4>
              <p> <%= number_to_currency(@ledger.ledger_balanced_month_payment) %> </p>
            </div>
          </div>
        </div>

        <div class="flip-card-back p-4 rounded rounded-xl">
          <div class="flex justify-between">
            <h3 class="mb-3">Available cleared</h3>
            <p>+</p>
          </div>
          <div>
            <p> <%=  %> </p>
          </div>
          <div class="mt-3 flex justify-between">
            <h4>Cleared total: </h4>
            <p> <%= number_to_currency(@ledger.ledger_cleared_month_deposit - @ledger.ledger_cleared_month_payment) %> </p>
          </div>
          <div class="mt-3 flex justify-between">
            <div class="flex justify-between">
              <h4>Month income: </h4>
              <p> <%= number_to_currency(@ledger.ledger_cleared_month_deposit) %> </p>
            </div>
            <div class="flex justify-between">
              <h4>Month expense: </h4>
              <p> <%= number_to_currency(@ledger.ledger_cleared_month_payment) %> </p>
            </div>
          </div>
        </div>

      </div>
    </div>
  </div>

  <div class="lg:col-start-1 lg:col-span-1 w-full h-full">
    <div class="flip-card">
      <div class="flip-card-inner">
        
        <div class="flip-card-front p-4 rounded rounded-xl">
          <div class="flex justify-between">
            <h3 class="mb-3">All Cleared</h3>
            <p>+</p>
          </div>
          <% @accounts.each do |account| %>    
            <div class="flex justify-between">
              <div>
                <img src="" alt="" class="w-25 h-25 bg-red-400">
                <h3> <%= account.name %> </h3>
              </div>
              <p><%= number_to_currency(account.cleared_account) %></p>
            </div>
          <% end %>
          <div class="mt-3 flex justify-between">
            <h4>Cleared total: </h4>
            <p> <%= number_to_currency(@ledger.ledger_cleared_deposit - @ledger.ledger_cleared_payment) %> </p>
          </div>
        </div>

        <div class="flip-card-back p-4 rounded rounded-xl">
          <div class="flex justify-between">
            <h3 class="mb-3">All Balanced</h3>
            <p>+</p>
          </div>
          <% @accounts.each do |account| %>    
            <div class="flex justify-between">
              <div>
                <img src="" alt="" class="w-25 h-25 bg-red-400">
                <h3> <%= account.name %> </h3>
              </div>
              <p><%= number_to_currency(account.balanced_account) %></p>
            </div>
          <% end %>
          <div class="mt-3 flex justify-between">
            <h4>Balance total: </h4>
            <p> <%= number_to_currency(@ledger.ledger_balanced_deposit - @ledger.ledger_balanced_payment) %> </p>
          </div>
        </div>

      </div>
    </div>
  </div>

  
  <div class="lg:col-start-2 lg:col-span-2 lg:row-start-1 lg:row-span-2 bg-white rounded rounded-xl w-full p-4">
    <div class="flex justify-between">
      <h3 class="mb-3">Expenses summary</h3>
      <p>+</p>
    </div>
    <% @categories.each do |category| %>    
      <div class="flex justify-between">
        <div>
          <img src="" alt="" class="w-25 h-25 bg-red-400">
          <h3> <%= category[:category_name] %> </h3>
        </div>
        <div class="flex lg:w-48 justify-between">
          <p><%= number_to_currency(category[:category_total]) %></p>
          <p><%= number_to_percentage((category[:category_total] / @month_total_expense) * 100, precision: 0) %></p>
        </div>
      </div>
    <% end %>
    <div class="mt-3 flex justify-between">
      <h4>Monthly total: </h4>
      <p> <%= number_to_currency(@month_total_expense) %> </p>
    </div>
  </div>

  <div class="lg:col-start-1 lg:col-span-1 w-full h-full"> 
    <div class="bg-white p-4 rounded rounded-xl">
      <div class="flex justify-between">
        <h3 class="mb-3">Top expenditures</h3>
        <p>+</p>
      </div>
      <% @top_transactions.each do |top_transaction| %>    
        <div class="flex justify-between">
          <div>
            <img src="" alt="" class="w-25 h-25 bg-red-400">
            <h3> <%= top_transaction.info %> </h3>
            <div class="flex">
              <span><%= top_transaction.account.name %> </span>
              <span> - </span>
              <span><%= top_transaction.subcategory.name %> </span>
            </div>
          </div>
          <div>
            <p><%= number_to_currency(top_transaction.payment) %></p>
            <span><%= top_transaction.date %> </span>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  
  <div id="canvas-holder" class="lg:col-start-2 lg:col-span-2">
    <h3 class="text-center">% of month expenses</h3>
    <canvas id="myChart" data-labels="<%= @data_keys %>" data-data="<%= @data_values %>"></canvas>
  </div>

</div>