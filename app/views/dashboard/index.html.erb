<div class="grid grid-cols-1 lg:grid-cols-3 gap-4 lg:gap-16  my-4 py-8" style="justify-items:center">
  
  <div class="lg:col-start-1 lg:col-span-1 bg-white rounded rounded-xl w-full p-4">
    <div class="flex justify-between">
      <h3 class="mb-3">All Cleared</h3>
      <p>+</p>
    </div>
    <% @accounts.each do |account| %>    
      <div class="flex justify-between">
        <div>
          <img src="" alt="" class="w-25 h-25 bg-red-400">
          <h3> <%= account.name %> </h3>
        </div>
        <p><%= number_to_currency(account.cleared_account) %></p>
      </div>
    <% end %>
  </div>

  
  <div class="lg:col-start-2 lg:col-span-2 bg-white rounded rounded-xl w-full p-4">
    <div class="flex justify-between">
      <h3 class="mb-3">Expenses summary</h3>
      <p>+</p>
    </div>
    <% @categories.each do |category| %>    
      <div class="flex justify-between">
        <div>
          <img src="" alt="" class="w-25 h-25 bg-red-400">
          <h3> <%= category[:category_name] %> </h3>
        </div>
        <p><%= number_to_currency(category[:category_total]) %></p>
      </div>
    <% end %>
  </div>
  

</div>