<div class="grid grid-cols-1 lg:grid-cols-2 gap-4 lg:gap-16 my-4 py-8" style="justify-items:center">
    <% @accounts.each do |account| %>
      <div class="flex flex-col justify-around bg-white w-60 h-44 items-center rounded rounded-xl">
        <img src="" alt="" class="w-25 h-25">  
        <h3> <%= account.name %> </h3>
        <p>Cleared value: <%= account.cleared_account %></p>
        <p>Balanced value: <%= account.balanced_account %></p>
      </div>
    <% end %>
  </div>