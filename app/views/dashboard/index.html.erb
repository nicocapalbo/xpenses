<div class="grid grid-cols-1 lg:grid-cols-3 lg:grid-rows-2 gap-4 lg:gap-16 my-4 py-8" style="justify-items:center">
  
  <div class="lg:col-start-1 lg:col-span-1 w-full flip-card-container">
    <div class="flip-card">
      <div class="flip-card-inner">
        
        <div class="flip-card-front p-4 rounded rounded-xl">
          <div class="flex justify-between">
            <h3 class="mb-3">All Cleared</h3>
            <p>+</p>
          </div>
          <% @accounts.each do |account| %>    
            <div class="flex justify-between">
              <div>
                <img src="" alt="" class="w-25 h-25 bg-red-400">
                <h3> <%= account.name %> </h3>
              </div>
              <p><%= number_to_currency(account.cleared_account) %></p>
            </div>
          <% end %>
          <div class="mt-3 flex justify-between">
            <h4>Cleared total: </h4>
            <p> <%= number_to_currency(@ledger.networth_cleared) %> </p>
          </div>
        </div>

        <div class="flip-card-back p-4 rounded rounded-xl">
          <div class="flex justify-between">
            <h3 class="mb-3">All Balanced</h3>
            <p>+</p>
          </div>
          <% @accounts.each do |account| %>    
            <div class="flex justify-between">
              <div>
                <img src="" alt="" class="w-25 h-25 bg-red-400">
                <h3> <%= account.name %> </h3>
              </div>
              <p><%= number_to_currency(account.balanced_account) %></p>
            </div>
          <% end %>
          <div class="mt-3 flex justify-between">
            <h4>Balance total: </h4>
            <p> <%= number_to_currency(@ledger.networth_balance) %> </p>
          </div>
        </div>

      </div>
    </div>
  </div>

